@model WebMvc.Models.BillProductProducts

@{
    ViewData["Title"] = "CreateBillProduct";
}

<h1>CreateBillProduct</h1>

<h4>BillProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBillProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="billProduct.Product.ProductId" class="control-label"></label>
                <select asp-for="billProduct.Product.ProductId" asp-items="@new SelectList(Model.products,@{"ProductId"}, @{"Name"})" class="form-control"></select>
                <span asp-validation-for="billProduct.Product.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="billProduct.Amount" class="control-label"></label>
                <input asp-for="billProduct.Amount" class="form-control" />
                <span asp-validation-for="billProduct.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="billProduct.BillId" class="form-control" hidden />
                <span asp-validation-for="billProduct.BillId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
